<UserControl x:Class="TrafficRulesTrainer.QuestionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrafficRulesTrainer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10">
            <Image x:Name="QuestionImageViewer" MinHeight="200"/>
            <TextBlock x:Name="QuestionTextLabel" TextWrapping="Wrap" Margin="8"/>
            <ListBox x:Name="AnswerVariantsList"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="AnswerButton" Width="100" Content="Ответить" Margin="8" HorizontalAlignment="Right" Click="AnswerButton_Click"/>
                <Button x:Name="NextButton" Width="100" Content="Далее" Margin="8" HorizontalAlignment="Right" Click="NextButton_Click"/>
            </StackPanel>
            <TextBlock x:Name="AnswerExplanationLabel" TextWrapping="Wrap" Margin="8"/>
        </StackPanel>
    </Grid>
</UserControl>
